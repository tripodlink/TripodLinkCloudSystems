<script type="text/javascript">
    $(function () {

        $(".edit").click(function () {

            var tr = $(this).parent().parent();
            var tdRecords = $(tr).children();
            var ID = $(tdRecords[0]).text();
            var item_group_name = $(tdRecords[1]).text();

            $("#igID").val(ID);
            $("#item_group_name").val(item_group_name);

            $('#myModal').modal('show');
        });
    });

    $(function () {

        $(".clear").click(function () {
            $("#igID").val("");
            $("#item_group_name").val("");

            $('#myModal').modal('show');
        });
    });
</script>
<script type="text/javascript">
    $(function () {
        
        $(".delete").click(function () {
             var tr = $(this).parent().parent();
                  var tdRecords = $(tr).children();
            var ID = $(tdRecords[0]).text();
             var item_group_name = $(tdRecords[1]).text();
            console.log(this.id);
            swal({
                title: "Are you sure?",
                text: "You will not be able to recover " + " " + item_group_name + " " + " file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, delete it!",
                cancelButtonText: "No, cancel plx!",
                closeOnConfirm: false,
                closeOnCancel: false
            }, function (isConfirm) {  if (isConfirm) {
       
                    jQuery.ajax({
                        type: 'POST',
                        data: { ID: ID},
                        url: '@Url.Action("Delete")',
                        success: function (data) {
                           
                            $('#itemGroupTable tr[id="' + ID + '"]').hide();
                       
                  
                      swal("Deleted!", "Your file has been deleted.", "success");
                        },
                    error: function () {

                        }
                });

            }
            else {
                  swal("Cancelled", "Your file is safe :)", "error");

            }
        })
    }); });
</script>

